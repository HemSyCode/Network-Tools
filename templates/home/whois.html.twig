{% extends 'base.html.twig' %}

{% block title %}Whois - {{ parent() }}{% endblock %}

{% block header_title %}Whois{% endblock %}

{% block header_subtitle %}Whois a domain.{% endblock %}

{% block body %}
<div>
    <form method="get">
        <div class="row mb-3">
            <div class="col-12">
                <div class="form-floating mb-4">
                    <input type="text" class="form-control" id="domain" name="domain" value="{{ domain }}" placeholder="Domain">
                    <label for="domain">Domain</label>
                </div>
            </div>
        </div>
        <button class="btn btn-primary" type="submit">Submit</button>
    </form>

    {% if result != '' %}
        <hr/>
        <pre>
            {{ result }}
        </pre>
    {% endif %}
</div>

{% endblock %}
